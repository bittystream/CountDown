<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/my_future_background"
        android:paddingVertical="5dp"
        android:paddingStart="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/my_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寒假"
            android:textColor="@color/background"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/my_item_yet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="还有"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_item_day"
            app:layout_constraintEnd_toStartOf="@+id/my_item_day"></TextView>

        <TextView
            android:id="@+id/my_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginEnd="8dp"
            android:text="35"
            android:textColor="@color/background"
            android:textSize="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="天"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_item_day"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>

